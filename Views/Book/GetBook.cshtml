@using JokesWebApp.Models
@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Book detail " + Model.book.Title;
}


<div class="container">
    <i><small>Welcome : @Model.Name</small></i>
    <div class="row">
        <h5 class="display-4">Book Details</h5>
        <div class="col-md-4">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block vh-20" asp-append-version="true" src="~/images/software-development-tag-cloud.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block vh-40" src="~/images/water.jpeg" asp-append-version="true" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        @*<img class="d-block vh-40" src="~/images/postgres.png" alt="Third slide">*@
                        <img class="d-block vh-40" src="~/images/postgres.png" asp-append-version="true" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card" style="width: 18rem;" id="pic1">
                <img class="card-img-top" asp-append-version="true" src="~/images/water.jpeg" alt="logo">
                <div class="card-body">
                    <i></i>
                    <h5 class="card-title"><i>Title : </i> @Model.book.Title</h5>
                    <p class="card-text"><i>About : </i> @Model.book.Description</p>
                    <small class="text-muted"><i>Author :</i> @Model.book.Author</small>
                    <a href="#" class="btn btn-outline-primary">Read more</a>
                    <a asp-protocol="https" asp-host="portfolio-ed5aa.web.app/"  asp-controller="" asp-action="">we use asp-protocal when we pass a full url) -->Go to my portfolio</a>
                </div>
            </div>

            <div id="list-example" class="list-group">
                <a class="list-group-item list-group-item-action" href="#list-item-1">Category : @Model.book.Category</a>
                <a class="list-group-item list-group-item-action" href="#list-item-2">Total Pages : @Model.book.TotalPages</a>
                <a class="list-group-item list-group-item-action" href="#list-item-3">Language : @Model.book.LanguageId</a>
            </div>

        </div>
    </div>
</div>